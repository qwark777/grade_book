<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="8dp" app:cardCornerRadius="16dp" app:cardUseCompatPadding="true">

    <LinearLayout android:padding="16dp" android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:id="@+id/tvSubject" android:text="Математика"
            android:textStyle="bold" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/tvAvg" android:text="4.50"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"/>

        <TextView android:id="@+id/tvCount" android:text="28 оценок"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
